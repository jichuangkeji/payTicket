<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="loginTipStyle">
        <item name="android:textColor">#00F</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="com.weirdotech.payticket:layout_widthPercent">@string/login_input_width_percent</item>
        <item name="com.weirdotech.payticket:layout_marginTopPercent">3%h</item>
    </style>

    <style name="loginBtnStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="com.weirdotech.payticket:layout_marginTopPercent">4%h</item>
        <item name="com.weirdotech.payticket:layout_widthPercent">@string/login_input_width_percent</item>
        <item name="com.weirdotech.payticket:layout_heightPercent">8.5%h</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/login_btn_color_selector</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

</resources>
