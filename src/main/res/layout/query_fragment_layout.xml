<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/homeFragsStyle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        style="@style/fragTittleStyle"
        android:text="罚单查询" />


    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_heightPercent="30%h"
        android:orientation="vertical"
        android:background="@drawable/query_result_bg">

        <EditText
            android:id="@+id/searchKeyEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_widthPercent="80%w"
            app:layout_heightPercent="30%h"
            app:layout_marginTopPercent="10%h"
            android:text="8888"
            android:layout_gravity="center_horizontal"
            />

        <TextView
            android:id="@+id/searchBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_widthPercent="80%w"
            app:layout_heightPercent="22%h"
            app:layout_marginTopPercent="10%h"
            android:text="搜索"
            android:background="#fff"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="#000"
            android:layout_gravity="center_horizontal"/>

    </com.zhy.android.percent.support.PercentLinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/operViewPager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_heightPercent="40%h"
        android:background="#ff0"
        android:visibility="gone"
        />



    <!-- 以下是测试  web contact的代码 -->

    <ListView
        android:id="@+id/contactLv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_heightPercent="80%h"
        android:background="#f00"
        android:visibility="gone"
        />

    <Button
        android:id="@+id/queryBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        />



</com.zhy.android.percent.support.PercentLinearLayout>